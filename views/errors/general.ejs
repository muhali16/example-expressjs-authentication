<%- include('../layouts/header', {title: "Error " + statusCode}) %>
<main>
    <div class="container">

        <section class="section error-404 min-vh-100 d-flex flex-column align-items-center justify-content-center">
            <h1 class="mt-5"><%= statusCode %></h1>
            <h2 class="mt-3"><%= name %></h2>
            <h4 class="text-center mb-5 w-50"><%= message %></h4>
            <button class="btn" onclick="window.history.back()" >Back</button>
            <img src="/nice-admin/assets/img/not-found.svg" class="img-fluid py-5" alt="Page Not Found">
        </section>

    </div>
</main><!-- End #main -->

<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
